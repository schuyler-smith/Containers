FROM ubuntu:20.04
LABEL maintainer="Schuyler Smith <schuyler.smith@nutrien.com>"

ENV DEBIAN_FRONTEND noninteractive
RUN apt-get update \
    && apt-get install --yes --no-install-recommends \
        ca-certificates \
        curl wget \
        zip unzip \
        default-jdk default-jre \
        less nano \
    && apt-get upgrade --yes \
    && apt-get clean

WORKDIR /opt

RUN wget https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip \
    -O awscliv2.zip \
    && unzip awscliv2.zip \
    && ./aws/install \
    && rm awscliv2.zip \
    && mkdir -p ~/.aws \
    && touch ~/.aws/credentials
ENV AWS_PROFILE="compsci-dev-computational-scientist"

CMD ["/bin/bash"]
